@using EduPlanApp.Models
@model TaskInputModel

@{
    ViewData["Title"] = $"Редагування Завдання: {Model.Title}";
    Layout = "_Layout";
}

<h1 class="text-3xl font-bold mb-6">@ViewData["Title"]</h1>
<p class="mb-6 text-gray-600">Оновлення деталей та відстеження статусу виконання навчального завдання.</p>

<div class="bg-white shadow-xl rounded-lg p-8 max-w-2xl mx-auto">
    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <!-- Назва -->
        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2 border" />
            <span asp-validation-for="Title" class="text-red-500 text-xs mt-1"></span>
        </div>

        <!-- Опис -->
        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2 border"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Категорія -->
            <div>
                <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="CategoryId"
                        asp-items="@(new SelectList(Model.AvailableCategories, "Key", "Value"))"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2 border">
                </select>
                <span asp-validation-for="CategoryId" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- Пріоритет -->
            <div>
                <label asp-for="PriorityId" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="PriorityId"
                        asp-items="@(new SelectList(Model.AvailablePriorities, "Key", "Value"))"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2 border">
                </select>
                <span asp-validation-for="PriorityId" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <!-- Кінцевий термін -->
        <div>
            <label asp-for="DueDate" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="DueDate" type="datetime-local" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2 border" />
            <span asp-validation-for="DueDate" class="text-red-500 text-xs mt-1"></span>
        </div>

        <!-- Статус виконання (Відстеження прогресу) -->
        <div class="flex items-center space-x-2 border-t pt-4">
            <input asp-for="IsCompleted" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
            <label asp-for="IsCompleted" class="text-sm font-medium text-gray-700"></label>
            <span class="text-xs text-gray-500">(Позначте, якщо завдання повністю виконано)</span>
        </div>

        <div class="mt-8 flex justify-end space-x-3">
            <a asp-action="TaskList" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg transition duration-150">Скасувати</a>
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-150">
                Зберегти Зміни
            </button>
        </div>
    </form>
</div>