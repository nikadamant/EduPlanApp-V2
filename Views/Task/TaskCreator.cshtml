@model EduPlanApp.Models.TaskInputModel

@{
    ViewData["Title"] = "Створення нового завдання";
}

<!DOCTYPE html>

<html lang="uk">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-8">
    <div class="w-full max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-2xl border border-gray-200">

        <h2 class="text-3xl font-extrabold text-indigo-700 mb-4">Створення Завдання</h2>
        <p class="text-gray-600 mb-6">@ViewData["Description"]</p>

        @if (!string.IsNullOrEmpty(Model?.OutputMessage))
        {
            <div role="alert" class="p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-100 border border-green-300">
                <span class="font-medium">Успіх!</span> @Model.OutputMessage
            </div>
        }

        <form asp-controller="Task" asp-action="TaskCreator" method="post" class="space-y-6">
            <!-- Назва Завдання -->
            <div>
                <label asp-for="TaskName" class="block text-sm font-medium text-gray-700">Назва завдання</label>
                <input asp-for="TaskName" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition duration-150" required>
            </div>

            <!-- Тип Завдання -->
            <div>
                <label asp-for="TaskType" class="block text-sm font-medium text-gray-700">Тип завдання</label>
                <select asp-for="TaskType" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition duration-150" required>
                    <option value="" selected disabled>Оберіть тип...</option>
                    <option value="Лабораторна">Лабораторна робота</option>
                    <option value="Проєкт">Проєкт / Курсова</option>
                    <option value="Іспит">Іспит / Тест</option>
                    <option value="Інше">Інше</option>
                </select>
            </div>

            <!-- Термін Виконання (Deadline) -->
            <div>
                <label asp-for="Deadline" class="block text-sm font-medium text-gray-700">Термін виконання</label>
                <!-- Встановлюємо значення за замовчуванням у форматі YYYY-MM-DD для коректного відображення в input type="date" -->
                <input asp-for="Deadline" type="date" value="@Model.Deadline.ToString("yyyy-MM-dd")" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition duration-150" required>
            </div>

            <!-- Опис -->
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700">Детальний опис</label>
                <textarea asp-for="Description" rows="4" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition duration-150"></textarea>
            </div>

            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2.5 rounded-lg transition duration-150 shadow-lg transform hover:scale-[1.01]">
                Створити Завдання
            </button>
        </form>

    </div>


</body>
</html>