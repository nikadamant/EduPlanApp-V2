@using EduPlanApp.Models
@model TaskViewModel

@{
    ViewData["Title"] = $"Завдання: {Model.Title}";
    Layout = "_Layout";
}

<h1 class="text-3xl font-bold mb-6">@ViewData["Title"]</h1>

<div class="bg-white shadow-xl rounded-lg p-8">
    <div class="border-b border-gray-200 pb-4 mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Основна Інформація</h2>
    </div>

    <dl class="divide-y divide-gray-100">
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Назва</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 font-bold">@Model.Title</dd>
        </div>
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Опис</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 whitespace-pre-wrap">@Model.Description</dd>
        </div>
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Категорія</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">@Model.CategoryName</dd>
        </div>
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Пріоритет</dt>
            <dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                    @(Model.PriorityName == "Високий" ? "bg-red-100 text-red-800" : Model.PriorityName == "Середній" ? "bg-yellow-100 text-yellow-800" : "bg-blue-100 text-blue-800")">
                    @Model.PriorityName
                </span>
            </dd>
        </div>
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Кінцевий термін</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @Model.DueDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
            </dd>
        </div>
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Створено</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @Model.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
            </dd>
        </div>
        <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Статус</dt>
            <dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
                <span class="px-2 inline-flex text-sm leading-5 font-semibold rounded-full @(Model.IsCompleted ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                    @(Model.IsCompleted ? "Виконано" : "В роботі")
                </span>
            </dd>
        </div>
    </dl>

    <div class="mt-6 flex justify-between">
        <a asp-action="TaskList" class="text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700">&larr; Повернутися до списку</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-150">Редагувати</a>
    </div>
</div>